---js
{
    permalink: "/wiki/{{ lexicon.slug }}/index.html",
    title: "{{ lexicon.title }}",
    pagination: {
        data: "lexiconFiles",
        alias: "lexicon",
        size: 1,
    }
}
---

{% include 'wiki-header.liquid' %}

{{ lexicon.content | mdb }}

{% if wiki.byGroup[lexicon.slug] and wiki.byGroup[lexicon.slug].length > 0 %}
	<h2>{{ lexicon.title }} List</h2>
	<ul class='category-list'>
		{% for item in wiki.byGroup[lexicon.slug] %}
			<li class='category-list-item'>{% item item.slug %}</li>
		{% endfor %}
	</ul>
{% endif %}
