---js
{
    permalink: "/{{ pagination.items[0].url }}/index.html",
    pagination: {
        data: "stats",
        alias: "lexicon",
        size: 1,
    }
}
---

{% include 'wiki-header.liquid' %}

<p>{{ lexicon.description | mdb }}</p>

{% if lexicon.longDescription %}
    <p>{{ lexicon.longDescription | mdb }}</p>
{% endif %}

{% if lexicon.parent %}
<p><strong>{{ lexicon.title }}</strong> is a {{ lexicon.hierarchy }} of <a href="/wiki/{{ lexicon.parent }}/">{{ lexicon.parent }}</a>.</p>
{% endif %}
{% if lexicon.children.size > 0 %}
    <p>It has the following {{ lexicon.childHierarchy }}s:</p>
    <ul>
        {% for child in lexicon.children %}
            <li><a href="/wiki/{{ child }}/">{{ child }}</a></li>
        {% endfor %}
    </ul>
{% endif %}

{% if lexicon.exampleUsages.size > 0 %}
<h3>Example Usages</h3>
<ul>
{% for usage in lexicon.exampleUsages %}
    <li>{{ usage | mdi }}</li>
{% endfor %}
</ul>
{% endif %}