---js
{
    permalink: "/{{ pagination.items[0].url }}/index.html",
    pagination: {
        data: "stats",
        alias: "stat",
        size: 1,
    }
}
---

<h1>{{ stat.name }}</h1>

<div class="item-header">
    <div class="item-metadata"></div>
    <div class="breadcrumb">
      <a href="/wiki/Stat">‚Üê Back to Stats</a>
    </div>
</div>

<p>{{ stat.description | mdb }}</p>

{% if stat.longDescription %}
    <p>{{ stat.longDescription | mdb }}</p>
{% endif %}

{% if stat.parent %}
<p><strong>{{ stat.name }}</strong> is a {{ stat.hierarchy }} of <a href="/wiki/{{ stat.parent }}/">{{ stat.parent }}</a>.</p>
{% endif %}
{% if stat.children.size > 0 %}
    <p>It has the following {{ stat.childHierarchy }}s:</p>
    <ul>
        {% for child in stat.children %}
            <li><a href="/wiki/{{ child }}/">{{ child }}</a></li>
        {% endfor %}
    </ul>
{% endif %}

{% if stat.exampleUsages.size > 0 %}
<h3>Example Usages</h3>
<ul>
{% for usage in stat.exampleUsages %}
    <li>{{ usage | mdi }}</li>
{% endfor %}
</ul>
{% endif %}