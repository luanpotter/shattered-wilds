---js
{
    permalink: "/{{ pagination.items[0].url }}/index.html",
    pagination: {
        data: "equipment",
        alias: "lexicon",
        size: 1,
    }
}
---

{% include 'wiki-header.liquid' %}

{% if lexicon.modes %}
    <ul>
        {% for mode in lexicon.modes %}
            <li>{{ mode.description }}</li>
        {% endfor %}
    </ul>
{% else %}
    {{ lexicon.content | mdb }}
{% endif %}

{% if lexicon.alternativeNames.length > 0 %}
<h2>Alternative Names</h2>
<ul>
    {% for name in lexicon.alternativeNames %}
        <li>{{ name }}</li>
    {% endfor %}
</ul>
{% endif %}