---js
{
    permalink: "/{{ pagination.items[0].url }}/index.html",
    pagination: {
        data: "traits",
        alias: "lexicon",
        size: 1,
    }
}
---

{% include 'wiki-header.liquid' %}

{{ lexicon.content | mdb }}

{% for target in lexicon.targets %}
    <h3>{{ target }} with {{ lexicon.title }}</h3>
    <ul>
        {% for item in wiki.byGroupByTrait[target][lexicon.slug] %}
            <li>{% item item.slug %}</li>
        {% endfor %}
    </ul>
{% endfor %}