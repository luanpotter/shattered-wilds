---js
{
    permalink: "/{{ pagination.items[0].url }}/index.html",
    pagination: {
        data: "predefinedArcaneSpells",
        alias: "lexicon",
        size: 1,
    }
}
---

{% include 'wiki-header.liquid' %}

{{ lexicon.content | mdb }}

{% if lexicon.augmentations.size > 0 %}
<h3>Augmentations</h3>
<ul>
    {% for augmentation in lexicon.augmentations %}
        <li>{{ augmentation.description }}</li>
    {% endfor %}
</ul>
{% endif %}