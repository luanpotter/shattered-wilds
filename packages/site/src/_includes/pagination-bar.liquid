{% if previous or next %}
	<div class='pagination'>
		{% if previous %}
			<p>
				<a href='{{previous.url}}'>{{ previous.text }} &lt;</a>
			</p>
		{% else %}
			<p></p>
		{% endif %}
		{% if next %}
			<p>
				<a href='{{next.url}}'>&gt; {{ next.text }}</a>
			</p>
		{% endif %}
	</div>
{% endif %}
