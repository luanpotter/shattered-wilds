<h1>{{ lexicon.title }}</h1>

{% if lexicon.group or lexicon.metadata %}
	<div class='item-header'>
		<div class='item-metadata'>
			{% for meta in lexicon.metadata %}
				{% if meta.value %}
					<span class='{{ meta.cssClass }}'>{{ meta.title }}: {{ meta.value }}</span>
				{% else %}
					<span class='{{ meta.cssClass }}'>
						<a href='/wiki/{{ meta.key }}/'>{{ meta.title }}</a>
					</span>
				{% endif %}
			{% endfor %}
		</div>

		<div class='breadcrumb'>
			{% if lexicon.group %}
				<a href='/wiki/{{ lexicon.group }}/'>‚Üê Back to {{ lexicon.group | replace: '_', ' ' }}</a>
			{% endif %}
		</div>
	</div>
{% endif %}
