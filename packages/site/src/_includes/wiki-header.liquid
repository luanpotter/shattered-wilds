<h1>{{ lexicon.title }}</h1>

{% if lexicon.group or lexicon.metadata %}
	<div class='item-header'>
		<div class='item-metadata'>
			{% for meta in lexicon.metadata %}
				<span class='{{ meta.metadataClass }}'>
				{%- if meta.key.slug -%}
					<a href="/wiki/{{ meta.key.slug }}">{{ meta.key.text }}</a>
				{%- else -%}
					{{- meta.key.text -}}
				{%- endif -%}
				{%- if meta.value -%}
					:
					{%- if meta.value.slug %}
						<a href="/wiki/{{ meta.value.slug }}">{{ meta.value.text }}</a>
					{% else %}
						{{ meta.value.text }}
					{% endif %}
				{% endif %}
				</span>
			{% endfor %}
		</div>

		<div class='breadcrumb'>
			{% if lexicon.group %}
				<a href='/wiki/{{ lexicon.groupSlug }}/'>‚Üê Back to {{ lexicon.group | replace: '_', ' ' }}</a>
			{% endif %}
		</div>
	</div>
{% endif %}
